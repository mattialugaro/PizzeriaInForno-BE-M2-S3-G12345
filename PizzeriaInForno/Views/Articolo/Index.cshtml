@model IEnumerable<PizzeriaInForno.Models.Articolo>

@{
  ViewBag.Title = "Index";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <h2 class="fst-italic">Lista Prodotti</h2>
    <p class="btn btn-danger border-1 border-dark">
        <a class="text-decoration-none text-white fw-bold" href="/Articolo/Create">Crea Prodotto</a>
    </p>
</div>

<table class="table text-center table-hover border border-3 ">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Foto)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Nome)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Prezzo)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.TempoConsegna)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Ingredient)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model) {
    <tr>
      <td>
        <img src="@Url.Content("~/Content/img/" + item.Foto)" class="rounded-circle" alt="@item.Nome" width="220px" height="200px" />
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Nome)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Prezzo) €
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.TempoConsegna) Min.
      </td>
      <td>
          @foreach (var ingrediente in item.Ingredient)
          {
              <div>@Html.Raw(@ingrediente.Nome)</div>
          }
      </td>
      <td>
          <div>@Html.ActionLink("Edit", "Edit", new { id = item.IDArticolo }, new { @class = "btn btn-light text-danger fw-bold border-1 border-dark" })</div>
          <div>@Html.ActionLink("Delete", "Delete", new { id = item.IDArticolo }, new { @class = "btn btn-danger text-white fw-bold border-1 border-dark" })</div>
          <div>@Html.ActionLink("Details", "Details", new { id = item.IDArticolo }, new { @class = "btn btn-light text-danger fw-bold border-1 border-dark" })</div>
      </td>
    </tr>
  }

</table>
